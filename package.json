{
  "name": "alerty-js",
  "version": "0.0.4",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish": "yarn workspaces foreach -W --from \"packages/*\" npm publish",
    "version:all": "yarn version $@ && yarn workspaces foreach -p -W --from \"packages/*\" version $@ && git add . && git commit -m \"v$@\" && git tag v$@"
  },
  "devDependencies": {
    "@alerty/eslint-config": "*",
    "@alerty/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "examples/*",
    "packages/*",
    "utils/*"
  ]
}
